<script xmlns="http://www.w3.org/1999/html">
    function Big(me)
    {
        $(me).removeClass("homeface");
        $(me).addClass("homefaceb");

        var p = me.getElementsByTagName("p")[0];
        $(p).removeClass("homeprojectnameh");
        $(p).addClass("homeprojectnamev");

    }
    function Small(me)
    {
        $(me).removeClass("homefaceb");
        $(me).addClass("homeface");

        var p = me.getElementsByTagName("p")[0];
        $(p).removeClass("homeprojectnamev");
        $(p).addClass("homeprojectnameh");
    }
</script>

<div id="home">
<% if user_signed_in? %>
    <% if current_user.role_id == 2 %>

        <!--<p>
        Vista de todas las caritas.
        Aquellas que pertenecen a los proyectos del cliente del usuario logueado se ven más grandes  y se les puede clickear
        </p>-->

        <div class="container">
          <div class="row-fluid">
            <div class="span1">
            </div>
            <div class="span10">
              <div class="homecenter">
                <h2>MOOD OF OUR CUSTOMERS</h2>
                <% count = 0 %>

                <% @projects = Project.all.shuffle %>
                <% @projects.each do |project| %>
                    <% mood = project.moods.order(:created_at).last %>

                    <% if project.client_id == current_user.client_id  %>
                        <div class="chomefacewrapperbig">
                          <div onclick="location.href='/my_projects?default=true&project_id=<%=project.id%>';" class="chomefacebig" >
                            <%=image_tag ('status/big/' + mood.get_mood_img) %>
                            <p class="homeprojectnamev"><%= project.name %></p>
                          </div>
                        </div>
                    <% else %>
                        <div class="chomefacewrapper">
                          <div onmouseover="Big(this)" onmouseout="Small(this)" class="homeface" >
                            <%=image_tag ('status/normal/' + mood.get_mood_img) %>
                            <p class="homeprojectnameh"><%= project.name %></p>
                          </div>
                        </div>
                    <% end %>


                    <% if count == 4 %>
                        <% count = 0 %>
                    <% else %>
                        <% count += 1 %>
                    <% end %>

                    <!-- < %= project.name  %> -->
                    <!--< %= mood.id  %>-->
                <% end %>
              </div>
              </br>
              </br>
              </br>
            </div>
            <div class="span1">
            </div>
          </div>
        </div>


    <% else %>

        <div class="container">
          <div class="row-fluid">
            <div class="span1">
            </div>
            <div class="span10">
              <div class="homecenter">
                <h2>MOOD OF OUR CUSTOMERS</h2>
                <% count = 0 %>
                <% @projects = Project.all.shuffle %>
                <% @projects.each do |project| %>
                    <% mood = project.moods.last! %>

                        <div class="ahomefacewrapper">
                          <div onclick="location.href='<%= project_path(project.id) %>?default=true'" onmouseover="Big(this)" onmouseout="Small(this)" class="homeface" >
                            <%= image_tag ('status/normal/' + mood.get_mood_img) %>
                            <p class="homeprojectnameh"><%= project.name %></p>
                          </div>
                        </div>

                    <!-- < %= project.name  %> -->
                    <!--< %= mood.id  %>-->
                <% end %>
              </div>
              </br>
              </br>
              </br>
            </div>
            <div class="span1">
            </div>
          </div>
        </div>

    <% end %>

<% else %>
