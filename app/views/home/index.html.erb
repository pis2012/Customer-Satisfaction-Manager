            </div>
          </div>
        </div>


    <% else %>

        <div class="container">
          <div class="row-fluid">
            <div class="span2">
            </div>
            <div class="span8">
              <div class="homecenter">
                <h2><%=  I18n.t('mood.mood_of_our_customers')%></h2>
                <% @projects = Project.all.shuffle %>
                <% @projects.each do |project| %>
                    <% mood = project.moods.last! %>


                        <div class="ahomefacewrapper">
                          <%= link_to :controller => "projects", :action => "change_profile_project", :id => project.id do %>
                             <div class="homeface" >
                            <%= image_tag('faces/normal/' + mood.get_mood_img, :class => 'img-rounded') %>
                            <p class="homeprojectnameh"><%= project.name %></p>
                            </div>
                          <% end %>
                        </div>

                    <!-- < %= project.name  %> -->
                    <!--< %= mood.id  %>-->
                <% end %>
              </div>
              </br>
              </br>
              </br>
            </div>
            <div class="span2">
            </div>
          </div>
        </div>

    <% end %>

