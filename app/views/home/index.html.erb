<script xmlns="http://www.w3.org/1999/html">
    function Big(me)
    {
        var image = me.getElementsByTagName("img")[0];
        me.style.width  = '130px';
        //me.style.height = '139px';
        //image.src.replace('small','big');
        var p = me.getElementsByTagName("p")[0];
        p.style.visibility = 'visible';

    }
    function Small(me)
    {
        var image = me.getElementsByTagName("img")[0];
        me.style.width  = '110px';
        //me.style.height = '118px';
        //image.src.replace('big','small');
        var p = me.getElementsByTagName("p")[0];
        p.style.visibility = 'hidden';
    }
</script>

