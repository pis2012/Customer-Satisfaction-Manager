<div id="home">
<% if user_signed_in? %>
    <% if current_user.client? %>

        <!--<p>
        Vista de todas las caritas.
        Aquellas que pertenecen a los proyectos del cliente del usuario logueado se ven m√°s grandes  y se les puede clickear
        </p>-->

        <div class="container">
          <div class="row-fluid">
            <div class="span1">
            </div>
            <div class="span10">
              <div class="homecenter">
                <h2><%=  I18n.t('mood.mood_of_our_customers')%></h2>
                <% count = 0 %>

                <% @projects = Project.all.shuffle %>
                <% @projects.each do |project| %>
                    <% mood = project.moods.order(:created_at).last %>

                    <% if project.client_id == current_user.client_id  %>
                        <div class="chomefacewrapperbig">
                          <%= link_to :controller => "projects", :action => "change_profile_project", :id => project.id do %>
                          <div class="chomefacebig" >
                            <%= image_tag('faces/big/' + mood.get_mood_img, :class => 'img-rounded')  %>
                            <p class="homeprojectnamev"><%= project.name %></p>
                          </div>
                          <% end %>
                        </div>
                    <% else %>
                        <div class="chomefacewrapper">
                          <div class="homeface" >
                            <%=image_tag('faces/normal/' + mood.get_mood_img, :class => 'img-rounded') %>
                            <p class="homeprojectnameh"><%= project.name %></p>
                          </div>
                        </div>
                    <% end %>


                    <% if count == 4 %>
                        <% count = 0 %>
                    <% else %>
                        <% count += 1 %>
                    <% end %>

                    <!-- < %= project.name  %> -->
                    <!--< %= mood.id  %>-->
                <% end %>
              </div>
              </br>
              </br>
