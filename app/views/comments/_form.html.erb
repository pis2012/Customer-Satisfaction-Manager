<%= form_for(@new_comment, :remote => true) do |f| %>

    <%= f.text_area :content, :rows => 3, :class => "new_comment_text" %>

    <input id="comment_feedback_id" name="feedback_id" size="30" type="hidden" value="<%= @feedback.id %>"/>

    <div class="actions">
      <%= f.submit t('buttons.comment'), :class => "btn" %> &nbsp <%= t('buttons.or') %>
      <a href="#feedbacks" class="btn btn-link feedbacks-link" type="button" data-url="<%= project_feedbacks_path(@feedback.project) %>"><%= t('buttons.back') %></a>
    </div>
<% end %>