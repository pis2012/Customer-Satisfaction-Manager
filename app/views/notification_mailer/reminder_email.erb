<% content_for :title do   %>
    <%= "Friendly reminder from Moove-iT" %>
<% end %>
<%= t('email.notification.reminder.greeting') %> <%= "#{@user.full_name}" %>
<br/>
<p>
  <%= t('email.notification.reminder.intro1') %> <%= link_to "#{@project.name}", change_profile_project_url(@project) %>.
  <%= t('email.notification.reminder.intro2') %>

</p>
<br/>
<br/>
<%= t('email.notification.reminder.faceclick') %> <%= link_to "#{@project.name}", change_profile_project_url(@project) %>
<table>
  <tr>
    <td style="width: 100px; text-align: center;"><%= image_tag attachments['Angry'].url %></td>
    <td style="width: 100px; text-align: center;"><%= image_tag attachments['Disappointed'].url %></td>
    <td style="width: 100px; text-align: center;"><%= image_tag attachments['Indifferent'].url %></td>
    <td style="width: 100px; text-align: center;"><%= image_tag attachments['Pleased'].url %></td>
    <td style="width: 100px; text-align: center;"><%= image_tag attachments['Happy'].url %></td>
  </tr>
  <tr>
    <td style="width: 100px; text-align: center; font-size: small;"><%= t('email.notification.reminder.face1') %>Angry</td>
    <td style="width: 100px; text-align: center; font-size: small;"><%= t('email.notification.reminder.face2') %>Disappointed</td>
    <td style="width: 100px; text-align: center; font-size: small;"><%= t('email.notification.reminder.face3') %>Indifferent</td>
    <td style="width: 100px; text-align: center; font-size: small;"><%= t('email.notification.reminder.face4') %>Pleased</td>
    <td style="width: 100px; text-align: center; font-size: small;"><%= t('email.notification.reminder.face5') %>Happy</td>
  </tr>
</table>
<br/>
<br/>
<p>
  <%= t('email.notification.reminder.request') %>
  <br/>
  <%= t('email.notification.reminder.salutation') %>
  <br/>
  <%= t('email.notification.reminder.signature') %>
</p>

