          <a href="<%= url_for(:host => "localhost:3000", :controller => "profiles", :action => "edit", :id => @profile.id) %>" >
            <%= url_for(:host => "localhost:3000", :controller => "profiles", :action => "edit", :id => @profile.id) %>
          </a>
        </p>
        <p>
          Have a great day,
          <br/>
          The Moove-iT Team
        </p>
      </td>
    </tr>
  </table>
