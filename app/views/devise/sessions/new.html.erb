<div class="container">
  <div class="row-fluid">
    <div class="span2">
      <!--Sidebar content-->
    </div>
    <div class="span10">
      <div class="container">
        <div class="row-fluid">
          <div class="span5">

          </div>
          <div class="span5" style="background-color: #f0f8ff; border-radius: 5px; ">
            <div class="tabbable " style="vertical-align: bottom;">
              <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1" data-toggle="tab">Sign in</a></li>
                <li><a href="#tab2" data-toggle="tab">Sign in with OpenID</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} ) do |f| %>
                      <div class="control-group">
                        <label class="control-label" for="inputUsername">Username</label>
                        <div class="controls">
                          <div class="input-prepend">
                                                    <span class="add-on">
                                                        <i class="icon-user"></i>
                                                    </span>
                            <%= f.text_field :username, :placeholder => "Username"  %>
                          </div>
                        </div>
                      </div>
                      <div class="control-group">
                        <label class="control-label" for="inputPassword">Password</label>
                        <div class="controls">
                          <div class="input-prepend">
                                                    <span class="add-on">
                                                        <i class="icon-lock"></i>
                                                    </span>
                            <%= f.password_field :password, :placeholder => "Password"  %>
                          </div>
                        </div>
                      </div>
                      <div class="control-group">
                        <div class="controls">
                          <%= f.submit "Sign in", :class => "btn btn-primary" %>
                        </div>
                      </div>
                  <% end %>
                </div>
                <div class="tab-pane" id="tab2">
                  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"} ) do |f| %>
                      <div class="control-group">
                        <label class="control-label" for="inputUsername">OpenID</label>
                        <div class="controls">
                          <div class="input-prepend">
                                                    <span class="add-on">
                                                        <i class="icon-user"></i>
                                                    </span>
                            <%= f.text_field :identity_url, :placeholder => "OpenID"  %>
                          </div>
                        </div>
                      </div>
                      <div class="control-group">
                        <div class="controls">
                          <%= f.submit "Sign in", :class => "btn btn-primary" %>
                        </div>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>