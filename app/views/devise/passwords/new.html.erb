<br/>
<div class="container">
  <div class="row-fluid">
    <div class="span2">
      <!--Sidebar content-->
    </div>
    <div class="span10">
      <div class="container">
        <div class="row-fluid">
          <div class="span5">

          </div>
          <div class="span5 " >
            <div class="tabbable logincontainer">
              <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1" data-toggle="tab"><%=  I18n.t('user.forgot_password')%></a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "form-horizontal", :method => :post }) do |f| %>
                      <div class="control-group">
                        <label class="control-label" for="inputUsername"><%=  I18n.t('user.username')%></label>
                        <div class="controls">
                          <div class="input-prepend">
                                                    <span class="add-on">
                                                        <i class="icon-user"></i>
                                                    </span>
                            <%= f.text_field :username, :placeholder =>  I18n.t('user.username')  %>
                          </div>
                        </div>
                      </div>
                      <div class="control-group">
                        <div class="controls">
                          <%= f.submit I18n.t('user.continue'), :class => "btn btn-primary" %>
                        </div>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
