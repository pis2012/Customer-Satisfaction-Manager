<!DOCTYPE html>
<html>
<head>
  <title>CSM</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "admin" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<div id="global-wrapper">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="#">CSM</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li>
              <a href="/"><i class="icon-home icon-white"></i> <%= I18n.t ('home.home')  %></a>
            </li>
                <% if current_user.admin? %>
                    <li>
                      <%= link_to '<i class="icon-wrench icon-white"></i> '.html_safe + I18n.t('home.admin'), admin_path %>
                    </li>
                <% else %>
                    <li>
                      <%= link_to '<i class="icon-wrench icon-white"></i> '.html_safe + I18n.t('home.My_Projects'), my_projects_path %>
                    </li>
                <% end %>
          </ul>
        </div><!-- /.nav -->
        <div class="nav pull-right">
          <% if user_signed_in? %>
              <ul class="nav">
                <li>
                  <%= link_to current_user.full_name, edit_profile_path(Profile.find_by_user_id(current_user )) %>
                </li>
                <li>
                  <%= link_to '<i class="icon-off icon-white"></i> '.html_safe + I18n.t('home.Sign_out'), destroy_user_session_path, :method => :delete %>
                </li>
              </ul>
          <% else %>
          <% end %>
        </div>
      </div><!-- /.container -->
    </div><!-- /.navbar-inner -->
  </div><!-- /.navbar -->


  <div id="header">
    <div class="container">

      <a  href="/">
        <div id="logo"></div>
      </a>

    </div>
  </div>

  <div id="content">
    <%= yield %>
  </div>

</div>

</body>
</html>