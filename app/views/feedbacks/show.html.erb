<div class="row seccion wide" style="margin: auto;" xmlns="http://www.w3.org/1999/html" >
    <div id="myTabContent" class="Data">
      <div class="page_header" style="border-bottom: solid; background: #ffffbc;border-bottom-width: 0.8px;border-bottom-color: #c8d0e2;">
        <h1>Feedback</h1>
      </div>

      <input class="TextField" id="feedback_project_id" name="project_id" size="30" type="hidden" value="<%= params[:Projectid] %>" />
      <div class="seccion3" >



          <h4 class="show_Asunto2"><%= truncate(strip_tags( @feedback.subject),
                                               :length => 45) %></h4>

          <h6 class="fechaFeedback2" ><%= "Create by " + @feedback.user.full_name + " on   " + @feedback.created_at.strftime("   %A, %d %B, %Y,  %H:%M")  %></h6>
          <h7 class="Contenido2"><%= @feedback.content %></h7>
          <h7 class="Contenido3"><%= @feedback.content %></h7>


      </div>

      <br>




</div>

  <div class="Separador" >

  </div>





    <% @feedback.comments.each do |comment| %>

          <div class="seccionComent">
            <%= image_tag("Skype.png", :alt => "Moove-It",:class => "ImgAvatComen") %>

            <h9 class="fechaComment"><%= "Create by " + comment.user.full_name + " at   " + comment.created_at.strftime("   %A, %d %B, %Y,  %H:%M")  %></h9>
            <h7 class="show_Coment"><%= comment.content  %></h7>
          </div>

    <% end %>


  <%= form_for(@commentNew) do |f| %>

    <div class="seccionComent">
      <div class="field">
        <%= f.text_area :content, :class => "TextAreaComent" %>
      </div>
      <input class="TextField" id="comment_feedback_id" name="feedback_id" size="30" type="hidden" value="<%= @feedback.id %>" />
      <div class="actions">
        <%= f.submit :class => "margin1" %>
      </div>
    </div>
  <% end %>


</div>





<%= link_to 'Edit', edit_feedback_path(@feedback) %> |
<%= link_to 'Back', feedbacks_path %>
