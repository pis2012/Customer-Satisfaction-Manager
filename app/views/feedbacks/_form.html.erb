<div class="feedback_new">
<%= form_for(@feedback, :remote => true) do |f| %>

    <% if @feedback.errors.any? %>
        <div class="alert alert-error">
          <h4><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h4>
          <ul>
            <% @feedback.errors.full_messages.each do |msg| %>
                <li><strong><%= msg %></strong></li>
            <% end %>
          </ul>
        </div>
    <% end %>

      <input  id="feedback_project_id" name="project_id" size="30" type="hidden" value="<%= @feedback.project_id %>"/>

      <div class="margin4">
        <%= f.label :feedback_subject,t('feedback.feedback_type'), :class => "feedback_Label" %>
        <%= f.select(:feedback_type_id, FeedbackType.all.map { |fe| [fe.name, fe.id] }  )  %>
      </div>

      <div class="margin4">
        <%= f.label :subject,t('feedback.feedback_subject'), :class => "feedback_Label" %>
        <%= f.text_field :subject, :id=> "feedback_subjectText" %>
      </div>


      <div class="margin3">
        <%= f.label :content,t('feedback.feedback_content'), :class => "feedback_Label" %>
        <%= f.text_area :content, :id => "feedback_textarea" %>

      </div>


      <div class="margin3">
        <%= f.label :visibility,t('feedback.feedback_visivility'), :class => "feedback_Label" %>
        <%= f.check_box :mooveit_visibility %><%= t('feedback.Moove_IT_employee')%>    <%= f.check_box :client_visibility %> <%= t('admin.clients')%>
      </div>



      <div class="margin4">
        <%= f.submit  t('buttons.create'), :class => "btn" %> &nbsp <%= t('buttons.or') %>
        <button class="btn btn-link cancel-feedback-link" type="button" data-url="<%= project_feedbacks_path(:project_id => @feedback.project_id) %>"  >
          <%= t('buttons.cancel')%>
        </button>
      </div>
<% end %>
</div>