

<%= form_for(@milestone) do |f| %>

    <% if @milestone.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@milestone.errors.count, "error") %> prohibited this milestone from being saved:</h2>

          <ul>
            <% @milestone.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

      <input  id="milestone_project_id" name="project_id" size="30" type="hidden" value="<%= @milestone.project_id %>"/>

      <div class="margin4">
        <%= f.label :name, :class => "milestone_Label" %>
        <%= f.text_field :name, :id=> "milestone_nameText" %>
      </div>


    <div class="margin4">
      <%= f.label :target_date, :class => "milestone_Label" %>
      <%= f.date_select :target_date, :id=> "milestone_target_dateText" %>
    </div>


      <div class="margin4">
        <%= f.submit :Create %> or
        <!--<button class="btn btn-link cancel-milestone-link" type="button" data-url="<%= project_data_path(@milestone.project) %>"  >
          Cancel
        </button> -->
        <a href="#project-data" class="data-link" data-url="<%= project_data_path(@milestone.project) %>"> Cancel</a>
      </div>
<% end %>