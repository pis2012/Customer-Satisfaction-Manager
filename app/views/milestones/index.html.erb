<div class="milestones_list">
  <h4><%= t('my_projects.data_tab.milestones') %></h4>

  <dl class="dl-horizontal">
    <% @view[:project].milestones.each do |milestone| %>
        <% if milestone.target_date.to_datetime > Time.now.to_datetime %>
            <dt><%= get_milestone_date milestone.target_date %></dt>
            <dd>
              <%= milestone.name %>
              <!-- only admins can delete milestones -->
              <% if current_user.admin? %>
                  <%= link_to '', milestone, method: :delete, confirm: t('milestone.eliminate_confirm'), class: 'icon-remove-circle', :remote => true %>
              <% end %>
            </dd>
        <% else %>
            <dt class="muted"><%= get_milestone_date milestone.target_date %></dt>
            <dd class="muted">
              <%= milestone.name %>
              <!-- only admins can delete milestones -->
              <% if current_user.admin? %>
                  <%= link_to '', milestone, method: :delete, confirm: t('milestone.eliminate_confirm'), class: 'icon-remove-circle', :remote => true %>
              <% end %>
            </dd>
        <% end %>
    <% end %>
  </dl>
</div>






