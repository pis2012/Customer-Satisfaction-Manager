<div class="page_header">
  <h1><%= t('admin.tabs.new_user') %></h1>
</div>

<div class="page_content" id="new-user-content">


<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>

    <div class="field">
      <%= f.select(:client_id, Client.all.map {|client| [client.name, client.id]},:prompt => true) %>

    </div>


    </hr>

    <div><%= f.label :username %><br />
      <%= f.text_field :username %></div>

    <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>


    </hr>

    <div><%= f.label :email %><br />
    <%= f.text_field :email %></div>

    <div><%= f.label :openopenidemail  %><br />
      <%= f.text_field :openidemail %></div>


    <div class="controls">
      <%= t('user_edit.skype_user')  %>
      </br>
      <div class="input-prepend">
        <%=text_field_tag :skype_usr %>
      </div>
    </div>


    <div class="actions">
    <%= f.submit "Crear" %>   or
      <%=  link_to "Cancel", :back %>
  </div>
<% end %>

</div>
