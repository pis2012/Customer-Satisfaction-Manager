<!-- page header -->
<div class="page_header">
  <h1><%= t('admin.tabs.show_client') %></h1>

  <div class="add_element">
    <button class="btn btn-link edit-client-link" data-url="<%= clients_edit_path(@client.id) %>">
      <i class="icon-edit icon-white"> </i> <%= t('client.edit_client') %>
    </button>
  </div>

</div>
<!--// page header -->

<!-- page contents -->
<div class="page_content" id="show_client_data">

  <h3><%="#{t('client.name')}: #{@client.name}" %></h3>

  <h6><%= "#{t('client.date_create')}: " + get_client_date %></h6>

  <br>
  <br>

  <% if @client.users.count > 0 %>
      <h5><%= t('client.users') + " : " %> </h5>
      <table class="table table-striped">

        <thead>
        <tr>
          <th><h4>Full Name</h4></th>
          <th><h4>User</h4></th>
          <th><h4>Email</h4></th>
        </tr>
        </thead>

        <% @client.users.each do |user| %>
            <tr>
              <td><h5><%= user.full_name %></h5></td>
              <td><h5><%= user.username %></h5></td>
              <td><h5><%= user.email %></h5></td>
            </tr>
        <% end %>
      </table>
  <% else %>
      <h5><%= t('client.users') + " : No tiene usuarios asociado" %> </h5>
  <% end %>

  <br>
  <br>

  <% if @client.projects.count > 0 %>
      <b><h5><%= t('client.proyect') + " : " %> </h5></b>
      <table class="table table-striped">

        <thead>
        <tr>
          <th><h4>Nombre</h4></th>
          <th><h4>Fecha De Fin</h4></th>
        </tr>
        </thead>

        <% @client.projects.each do |project| %>
            <tr>
              <td><h5><%= project.name %></h5></td>
              <td>
                <h5><%= t("date." + "#{project.end_date.strftime("%A")}") + project.end_date.strftime(" %d ") + t("date." + "#{project.end_date.strftime("%B")}") + project.end_date.strftime(" %Y") %></h5>
              </td>
            </tr>
        <% end %>
      </table>
  <% else %>
      <b><h5><%= t('client.proyect') + " : No tiene proyectos asociados" %></h5></b>
  <% end %>
</div>
<!-- page contents -->