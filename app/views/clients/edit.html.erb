<!-- page header -->
<div class="page_header">
  <h1><%= t('admin.tabs.edit_client') %></h1>

  <div class="add_element">
    <% if @client.projects.count == 0 %>
        <button class="btn btn-link delete-btn">
          <i class="icon-minus icon-white"></i>
          <%= link_to t('client.delete_client'), clients_delete_path(@client.id), :method => :delete, :remote => true,
                      :confirm => t('client.eliminate_confirm') %>
        </button>
    <% end %>
  </div>

</div>
<!--// page header

<!-- page contents -->
<div class="page_content" id="edit_client_data">
  <%= render 'form' %>
</div>
