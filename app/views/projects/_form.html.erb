<%= form_for(@view[:project], :remote => true ) do |f|%>

    <div class="page_header">
      <h1>
          <% if @view[:edit] %>
            <%= t('admin.tabs.edit_project') %>
          <% else %>
              <%= t('admin.tabs.new_project') %>
          <% end %>
      </h1>

    </div>


    <% if @view[:project].errors.any? %>
        <div class="alert alert-error">
          <% if @view[:project].errors.count > 1 %>
              <h4><%= t('activerecord.errors.template.header.other', :model=> @view[:project].class.name, :count=> @view[:project].errors.count) %></h4>
          <% else %>
              <h4><%= t('activerecord.errors.template.header.one',:model=> @view[:project].class.name) %></h4>
          <% end %>
          <% @view[:project].errors.full_messages.each do |msg| %>
              <strong><%= msg %></strong>
          <% end %>
        </div>
    <% end %>

    <br/>


    <div class="project-name">
      <%= f.text_field :name,  :placeholder => I18n.t('proyect.name') %>
    </div>
    <br/>

    <div class="project-description">
      <%= f.text_field :description, :placeholder => I18n.t('proyect.description') %>
    </div>
    <br/>

    <div class="project-client">
      <%= f.label :client %><br />
      <%= f.select(:client_id,Client.all.map {|client| [client.name, client.id]},:prompt => true) %>
    </div>
    <br/>

    <% if @view[:edit] %>
        <label class="control-label checkbox-hand" >
          <%= t('proyect.finalized')%>&nbsp;<%= f.check_box(:finalized) %>
        </label>
    <% end %>


    <div class="project-date">
        <%= f.label :end_date %><br />
        <%= f.date_select :end_date %>
  </div>


    <div class="actions">
      <% if @view[:edit] %>
        <%= f.submit  I18n.t('buttons.update'), :class => "btn" %>
      <% else %>
          <%= f.submit  I18n.t('buttons.create'), :class => "btn" %>
      <% end %>

        &nbsp <%= I18n.t('buttons.or') %>
        <button class="btn btn-link projects-link" type="button" data-url="<%= admin_projects_path %>">
          <%= I18n.t('buttons.cancel')%>
        </button>
    </div>
<% end %>
